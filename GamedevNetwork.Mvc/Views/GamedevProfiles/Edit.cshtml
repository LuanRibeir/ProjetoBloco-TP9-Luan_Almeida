@model GamedevNetwork.Domain.Models.GamedevProfile

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GamedevProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <img src="@Model.ImagemUri" width="200" /> <br />

                <label asp-for="ImagemUri" class="control-label"></label>
                <input type="hidden" asp-for="ImagemUri" />
                <input type="file" class="form-control" accept=".jpg, .png" />
                <span asp-validation-for="ImagemUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nacionalidade" class="control-label"></label>
                <input asp-for="Nacionalidade" class="form-control" />
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JogoFavorito" class="control-label"></label>
                <input asp-for="JogoFavorito" class="form-control" />
                <span asp-validation-for="JogoFavorito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeDeJogosPublicados" class="control-label"></label>
                <input asp-for="QuantidadeDeJogosPublicados" class="form-control" />
                <span asp-validation-for="QuantidadeDeJogosPublicados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
