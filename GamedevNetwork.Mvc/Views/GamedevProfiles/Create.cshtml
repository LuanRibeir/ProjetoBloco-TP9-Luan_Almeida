@model GamedevNetwork.Mvc.Models.GamedevProfile

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GamedevProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label" for="defaultFile">Imagem de Perfil</label>
                <input type="file" class="form-control" name="image" accept=".jpg, .png" required />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nacionalidade" class="control-label"></label>
                <input asp-for="Nacionalidade" class="form-control" />
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JogoFavorito" class="control-label"></label>
                <input asp-for="JogoFavorito" class="form-control" />
                <span asp-validation-for="JogoFavorito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeDeJogosPublicados" class="control-label"></label>
                <input asp-for="QuantidadeDeJogosPublicados" class="form-control" />
                <span asp-validation-for="QuantidadeDeJogosPublicados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
